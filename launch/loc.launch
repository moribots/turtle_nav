  <launch>
  	  <!-- Run the map server -->
	  <arg name="map_file" default="$(find turtle_nav)/maps/map.yaml"/>
	  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
	  	<!-- remap pub topic to avoid overwriting the map I made -->
	  	<remap from="map" to="mymap"/>
	  </node>

	  <!-- include house_turtle -->
	  <include file="$(find turtle_nav)/launch/house_turtle.launch">
	  	<arg name="rviz_arg" value="-d $(find turtle_nav)/rviz/nav_turtle.rviz"/>
	  </include>
	 
	  <!-- include amcl -->
	  <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
	  	<arg name="initial_pose_x" value="-3.0"/>
	  	<arg name="initial_pose_y" value="1.0"/>
	  </include>

	  <!-- include move_base -->
	  <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
	    <arg name="model" value="burger"/>
	  </include>
</launch>